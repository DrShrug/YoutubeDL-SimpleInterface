<Window x:Class="YoutubeDL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YoutubeDL"
        mc:Ignorable="d"
        Title="Quick Convert" Height="373.448" Width="490.371" ResizeMode="NoResize">
    <Grid>
        <TextBox Name="txtYoutubeURL" VerticalContentAlignment="Center" TextAlignment="Center" HorizontalAlignment="Left" Height="23" Margin="90,36,0,0" TextWrapping="Wrap" Text="&#xD;&#xA;" VerticalAlignment="Top" Width="301"/>
        <Label Content="Enter Youtube URL" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Margin="10,10,10,0" VerticalAlignment="Top" Width="366"/>
        <Button Content="Select target directory" HorizontalAlignment="Left" Margin="10,71,0,0" VerticalAlignment="Top" Width="131" Click="clickSetDownloadDirectory" Height="30"/>
        <Label Content="[Download directory]" Name="directorySelect" HorizontalAlignment="Left" Margin="146,71,0,0" VerticalContentAlignment="Center" VerticalAlignment="Top" Width="313" Height="30"/>
        <Button Content="Audio"  HorizontalAlignment="Left" Margin="10,211,0,0" VerticalAlignment="Top" Width="75" Click="clickGetAudio"/>
        <Button Content="Video" HorizontalAlignment="Left" Margin="10,236,0,0" VerticalAlignment="Top" Width="75" Click="clickGetVideo"/>
        <Button Content="Youtube-dl location" HorizontalAlignment="Left" Margin="10,106,0,0" VerticalAlignment="Top" Width="131" Height="30" Click="clickSetYoutubeDLDirectory"/>
        <Label Content="[youtube-dl.exe location]" Name="youtubeLocation" HorizontalAlignment="Left" Margin="146,106,0,0" VerticalContentAlignment="Center" VerticalAlignment="Top" Width="313" Height="30"/>
        <GroupBox Header="Status" HorizontalAlignment="Left" Height="156" Margin="102,156,0,0" VerticalAlignment="Top" Width="370">
            <ScrollViewer Name="statusScroll" BorderBrush="WhiteSmoke" HorizontalAlignment="Left" Height="144" VerticalAlignment="Top" Width="362" Margin="0,-7,-6,-3" BorderThickness="2">
                <TextBlock TextWrapping="Wrap" Name="statusConsole" Text="" Width="337" Height="129"/>
            </ScrollViewer>
        </GroupBox>




    </Grid>
</Window>
